@model ToolDepot.Areas.Admin.Models.Products.ApproveReviewModel

@{
    ViewBag.Title = "ApproveReviews";
}

<h2>Approve Reviews</h2>
<ul class="nav nav-tabs">
    <li class="active">
        <a href="#pending" data-toggle="tab">Pending</a>
    </li>
    <li>
        <a href="#approved" data-toggle="tab">Approved</a>
    </li>
</ul>


<div class="tab-content">
    <div class="tab-pane active" id="pending">
        <table class="table table-striped">
            <tr>
                <th>User Name</th>
                <th>Email Address</th>
                <th>Location</th>
                <th>Created Date</th>
                <th>Actions</th>
            </tr>
            @foreach (var item in Model.Reviews.SkipWhile(x => x.IsApproved))
            {
                using (Html.BeginForm())
                {
                <tr>
                    @Html.HiddenFor(x => item.Id)
                    <td>
                        @item.UserName
                    </td>
                    <td>
                        @item.EmailAddress
                    </td>
                    <td>
                        @item.Location
                    </td>
                    <td>
                        @item.CreatedDate
                    </td>
                    <td>
                        View
                    </td>
                </tr>
                }
            }

        </table>
    </div>
    <div class="tab-pane" id="approved">
        <table class="table table-striped">
            <tr>
                <th>User Name</th>
                <th>Email Address</th>
                <th>Location</th>
                <th>Created Date</th>
                <th>Actions</th>
                
            </tr>
            @foreach (var item in Model.Reviews.SkipWhile(x => !x.IsApproved))
            {
                <tr>
                    <td>
                        @item.UserName
                    </td>
                    <td>
                        @item.EmailAddress
                    </td>
                    <td>
                        @item.Location
                    </td>
                    <td>
                        @item.CreatedDate
                    </td>
                    <td>
                        View
                    </td>
                </tr>
            }
        </table>
    </div>
</div>



